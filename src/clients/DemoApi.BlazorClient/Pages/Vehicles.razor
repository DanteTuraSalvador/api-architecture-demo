@page "/vehicles"
@inject ApiService ApiService

<PageTitle>Vehicles Management</PageTitle>

<h1>Vehicles</h1>
<p class="lead">Manage your fleet vehicles via REST API</p>

<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <span class="bi bi-plus"></span> Add Vehicle
        </button>
        <button class="btn btn-outline-secondary ms-2" @onclick="LoadVehiclesAsync">
            <span class="bi bi-arrow-clockwise"></span> Refresh
        </button>
    </div>
    <div class="col-auto">
        <select class="form-select" @bind="statusFilter" @bind:after="LoadVehiclesAsync">
            <option value="">All Statuses</option>
            <option value="Available">Available</option>
            <option value="InTransit">In Transit</option>
            <option value="Maintenance">Maintenance</option>
            <option value="OutOfService">Out of Service</option>
        </select>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger">
        @errorMessage
        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="LoadVehiclesAsync">Retry</button>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Vehicle Number</th>
                    <th>License Plate</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Mileage</th>
                    <th>Last Maintenance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (vehicles.Any())
                {
                    @foreach (var vehicle in vehicles)
                    {
                        <tr>
                            <td><strong>@vehicle.VehicleNumber</strong></td>
                            <td>@vehicle.LicensePlate</td>
                            <td>
                                <span class="badge @GetTypeBadgeClass(vehicle.Type)">@vehicle.Type</span>
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(vehicle.Status)">@vehicle.Status</span>
                            </td>
                            <td>@vehicle.Mileage.ToString("N0") km</td>
                            <td>@vehicle.LastMaintenance.ToString("yyyy-MM-dd")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(vehicle)">Edit</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteVehicleAsync(vehicle)">Delete</button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <p class="text-muted mb-0">No vehicles found.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditing ? "Edit Vehicle" : "Add Vehicle")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Vehicle Number</label>
                        <input type="text" class="form-control" @bind="editingVehicle.VehicleNumber" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">License Plate</label>
                        <input type="text" class="form-control" @bind="editingVehicle.LicensePlate" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Type</label>
                        <select class="form-select" @bind="editingVehicle.Type">
                            @foreach (var type in Enum.GetValues<VehicleType>())
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="editingVehicle.Status">
                            @foreach (var status in Enum.GetValues<VehicleStatus>())
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mileage (km)</label>
                        <input type="number" class="form-control" @bind="editingVehicle.Mileage" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveVehicleAsync" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        }
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Vehicle> vehicles = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string statusFilter = "";

    private bool showModal = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private Vehicle editingVehicle = new();
    private Guid? editingVehicleId;

    protected override async Task OnInitializedAsync()
    {
        await LoadVehiclesAsync();
    }

    private async Task LoadVehiclesAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            if (string.IsNullOrEmpty(statusFilter))
            {
                vehicles = await ApiService.GetVehiclesAsync();
            }
            else
            {
                vehicles = await ApiService.GetVehiclesByStatusAsync(statusFilter);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load vehicles: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddModal()
    {
        isEditing = false;
        editingVehicle = new Vehicle
        {
            Type = VehicleType.Truck,
            Status = VehicleStatus.Available
        };
        editingVehicleId = null;
        showModal = true;
    }

    private void ShowEditModal(Vehicle vehicle)
    {
        isEditing = true;
        editingVehicle = new Vehicle
        {
            VehicleNumber = vehicle.VehicleNumber,
            LicensePlate = vehicle.LicensePlate,
            Type = vehicle.Type,
            Status = vehicle.Status,
            Mileage = vehicle.Mileage
        };
        editingVehicleId = vehicle.Id;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveVehicleAsync()
    {
        isSaving = true;

        try
        {
            if (isEditing && editingVehicleId.HasValue)
            {
                await ApiService.UpdateVehicleAsync(editingVehicleId.Value, editingVehicle);
            }
            else
            {
                await ApiService.CreateVehicleAsync(editingVehicle);
            }

            showModal = false;
            await LoadVehiclesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save vehicle: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteVehicleAsync(Vehicle vehicle)
    {
        try
        {
            await ApiService.DeleteVehicleAsync(vehicle.Id);
            await LoadVehiclesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete vehicle: {ex.Message}";
        }
    }

    private string GetTypeBadgeClass(VehicleType type) => type switch
    {
        VehicleType.Truck => "bg-primary",
        VehicleType.Van => "bg-info",
        VehicleType.Car => "bg-secondary",
        VehicleType.Motorcycle => "bg-warning",
        VehicleType.Bus => "bg-dark",
        _ => "bg-secondary"
    };

    private string GetStatusBadgeClass(VehicleStatus status) => status switch
    {
        VehicleStatus.Available => "bg-success",
        VehicleStatus.InTransit => "bg-info",
        VehicleStatus.Maintenance => "bg-warning",
        VehicleStatus.OutOfService => "bg-danger",
        _ => "bg-secondary"
    };
}
